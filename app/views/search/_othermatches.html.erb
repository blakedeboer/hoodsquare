
<h3>Checkout other hoods in <%= @from_hood.top_match.city.nickname %>:</h3>
<% @from_hood.top_match.city.hoods.each do |hood| %>
  <div class="col-md-3 col-sm-6">
    <div class="pic wow flipInX showdelay2">
      <a href="<%= hood.img_url %>" class="gallery-item"><img class="img-responsive img-thumbnail" src="images/img1.jpg" alt="">
        <div class="img_overlay">
          <% if @from_hood.top_match != hood %>
          <%= link_to hood.name, city_hood_path(@from_hood.top_match.city, hood), :id => "other_hood_name" %>
        <% end %>
        </div>
      </a>
    </div>
  </div>
<% end %>